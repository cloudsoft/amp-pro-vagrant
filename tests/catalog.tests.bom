brooklyn.catalog:
  items:
  - "https://raw.githubusercontent.com/brooklyncentral/common-catalog-utils/master/common-tests/src/main/resources/commontests/common.tests.bom"
  - id: amp-vagrant-tests
    version: 0.0.1-SNAPSHOT
    itemType: template
    iconUrl: https://pbs.twimg.com/profile_images/770492216863236096/8igZkijg.jpg
    name: AMP Vagrant tests
    description: Test that AMP Vagrant goes up and a simple app can be deployed on the byon
    item:
      brooklyn.parameters:
      - name: amp.download.url
        label: AMP URL
        description: |
          URL of the AMP to use
        type: string
        default: http://downloads.cloudsoftcorp.com/amp/latest/cloudsoft-amp-karaf-latest-noarch.rpm
      - name: catalog.bom.url
        label: "Catalog url"
        type: string
      - name: catalog.tests.bom.url
        label: "Gatalog tests url"
        type: string
      - name: catalog.test.item.id
        label: "Catalog item id"
        type: string
      - name: display.name
        label: "Test display name"
        type: string

      services:
      - type: amp-vagrant
        id: vagrant
      - type: test-case
        name: AMP Vagrant Tests
        brooklyn.config:
          targetId: vagrant
          timeout: 1h
        brooklyn.children:
        - type: test-case
          name: "1. Start and Deploy Tests"
          brooklyn.children:  
          - type: assert-up-and-running-initial
            name: "1. Node up and running"
          - type: test-ssh
            name: "2. Install br tool & tests"
            brooklyn.config:
              targetId: vagrant
              command:
                $brooklyn:formatString:
                  - |
                    # install the br CLI
                    curl -O http://admin:password@localhost:8081/amp-ui-download/downloads/linux.386/br
                    chmod +x br
                    ./br login http://localhost:8081 admin password
                    ./br add-catalog %s
                    ./br add-catalog %s

                  - $brooklyn:config("catalog.bom.url")
                  - $brooklyn:config("catalog.tests.bom.url")

          - type: test-ssh
            name: "3. Deploy app to BYON 1"
            brooklyn.config:
              targetId: vagrant
              command:
                $brooklyn:formatString:
                  - |
                    cat <<ENDOFFILE > deploy.yaml
                    location:
                      byon:
                        user: vagrant
                        password: vagrant
                        hosts:
                        - 10.10.10.101
                    services:
                    - type: %s
                    ENDOFFILE
                    ./br login http://localhost:8081 admin password
                    ./br deploy deploy.yaml

                  - $brooklyn:config("catalog.test.item.id")

          - type: test-ssh
            name: "4. Check Tests Passed"
            brooklyn.config:
              targetId: vagrant
              command:
                $brooklyn:formatString:
                  - |
                    ./br app "%s" | grep RUNNING

                  - $brooklyn:config("display.name")
          